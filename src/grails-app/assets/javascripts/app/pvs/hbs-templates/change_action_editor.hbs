<form id="bulk-action-editor-form">
    <div>
          <input type="hidden" name="actionList" value="{{actionIds}}"/>
       <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-3">
                    <label>Action</label>
                    <span id="action" class="form-control"></span>
                </div>

                <div class="col-lg-3">
                    <label>Type</label>
                    <span id="type" class="form-control"></span>
                </div>

                <div class="col-lg-3">
                    <label>Assigned To</label>
                       <select id="assignedTo" name="assignedTo" class="form-control">
                        <option style="display:none;"></option>
                         {{#each users}}
                            <option value="{{id}}">{{fullName}}</option>
                         {{/each}}
                     </select>

                </div>
                <div class="fuelux">
                    <div class="col-lg-3 datepicker form-group" id="due-date-picker">
                        <label>Due Date</label>

                       <div class="input-group">
                            <input placeholder="Due Date" name="dueDate" id="dueDate"
                                   class="form-control input-sm" id="filter-detected-date-from" type="text" value="{{dueDate}}"/>
                            {{> date_picker_template}}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 form-group">
                    <label>Action Details
                    </label>
                     <span id="details" style="height: 150px" class="form-control"></span>
                </div>

                <div class="col-lg-6 form-group">
                    <label>Comments</label>
                     <span id="comments" style="height: 150px" class="form-control"></span>
             </div>
            </div>

            <div class="row">
                <div class="col-lg-2 form-group">
                    <label for="actionStatus">Status</label>
                    <select id="actionStatus" name="actionStatus" class="form-control" required>
                        <option style="display:none;"></option>
                        {{#each all_status}}
                           <option value="{{name}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
       </div>
    </div>
</form>